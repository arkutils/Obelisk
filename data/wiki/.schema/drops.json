{
	"title": "Dino drop loot tables",
	"type": "object",
	"properties": {
		"version": {
			"title": "Version",
			"description": "Data version of the format <gamemajor>.<gameminor>.<specificversion>, e.g. '306.83.4740398'",
			"type": "string"
		},
		"format": {
			"title": "Format",
			"description": "Free-form format identifier, changed only when incompatibilities are introduced",
			"type": "string"
		},
		"mod": {
			"title": "Mod info",
			"description": "Source module information",
			"allOf": [
				{
					"$ref": "#/definitions/ModInfo"
				}
			]
		},
		"drops": {
			"title": "Drops",
			"description": "List of loot crates",
			"type": "array",
			"items": {
				"$ref": "#/definitions/Drop"
			}
		}
	},
	"required": [
		"version",
		"format",
		"drops"
	],
	"additionalProperties": false,
	"$schema": "http://json-schema.org/draft-07/schema#",
	"definitions": {
		"ModInfo": {
			"title": "ModInfo",
			"type": "object",
			"properties": {
				"id": {
					"title": "Mod ID",
					"type": "string"
				},
				"tag": {
					"title": "Blueprint tag",
					"description": "Used in place of the mod ID in blueprint paths",
					"type": "string"
				},
				"title": {
					"title": "Mod name",
					"type": "string"
				}
			},
			"required": [
				"id",
				"tag",
				"title"
			]
		},
		"MinMaxRange": {
			"title": "MinMaxRange",
			"type": "object",
			"properties": {
				"min": {
					"title": "Min",
					"anyOf": [
						{
							"type": "number"
						},
						{
							"type": "integer"
						},
						{
							"type": "number"
						},
						{
							"type": "integer"
						}
					]
				},
				"max": {
					"title": "Max",
					"anyOf": [
						{
							"type": "number"
						},
						{
							"type": "integer"
						},
						{
							"type": "number"
						},
						{
							"type": "integer"
						}
					]
				}
			},
			"required": [
				"min",
				"max"
			],
			"additionalProperties": false
		},
		"MinMaxPowerRange": {
			"title": "MinMaxPowerRange",
			"type": "object",
			"properties": {
				"min": {
					"title": "Min",
					"anyOf": [
						{
							"type": "number"
						},
						{
							"type": "integer"
						},
						{
							"type": "number"
						},
						{
							"type": "integer"
						}
					]
				},
				"max": {
					"title": "Max",
					"anyOf": [
						{
							"type": "number"
						},
						{
							"type": "integer"
						},
						{
							"type": "number"
						},
						{
							"type": "integer"
						}
					]
				},
				"pow": {
					"title": "Power",
					"description": "Affects the power curve used to select a value in the range",
					"anyOf": [
						{
							"type": "number"
						},
						{
							"type": "integer"
						},
						{
							"type": "number"
						},
						{
							"type": "integer"
						}
					]
				}
			},
			"required": [
				"min",
				"max",
				"pow"
			],
			"additionalProperties": false
		},
		"ItemSetEntry": {
			"title": "ItemSetEntry",
			"type": "object",
			"properties": {
				"name": {
					"title": "Name",
					"type": "string"
				},
				"weight": {
					"title": "Weight",
					"type": "number"
				},
				"qty": {
					"$ref": "#/definitions/MinMaxPowerRange"
				},
				"quality": {
					"$ref": "#/definitions/MinMaxPowerRange"
				},
				"forceBP": {
					"title": "Forcebp",
					"type": "boolean"
				},
				"items": {
					"title": "Items",
					"description": "Pairs of (weighted chance, item class name)",
					"type": "array",
					"items": {
						"type": "array",
						"minItems": 2,
						"maxItems": 2,
						"items": [
							{
								"anyOf": [
									{
										"type": "number"
									},
									{
										"type": "number"
									}
								]
							},
							{
								"type": "string"
							}
						]
					}
				}
			},
			"required": [
				"weight",
				"qty",
				"quality",
				"forceBP",
				"items"
			],
			"additionalProperties": false
		},
		"ItemSet": {
			"title": "ItemSet",
			"type": "object",
			"properties": {
				"name": {
					"title": "Name",
					"type": "string"
				},
				"weight": {
					"title": "Weight",
					"anyOf": [
						{
							"type": "number"
						},
						{
							"type": "number"
						}
					]
				},
				"qtyScale": {
					"$ref": "#/definitions/MinMaxPowerRange"
				},
				"qualityScale": {
					"$ref": "#/definitions/MinMaxPowerRange"
				},
				"entries": {
					"title": "Entries",
					"type": "array",
					"items": {
						"$ref": "#/definitions/ItemSetEntry"
					}
				}
			},
			"required": [
				"weight",
				"qtyScale",
				"qualityScale",
				"entries"
			],
			"additionalProperties": false
		},
		"Drop": {
			"title": "Drop",
			"type": "object",
			"properties": {
				"bp": {
					"title": "Bp",
					"description": "Full blueprint path",
					"type": "string"
				},
				"name": {
					"title": "Name",
					"default": "",
					"type": "string"
				},
				"description": {
					"title": "Description",
					"default": "",
					"type": "string"
				},
				"maxItems": {
					"title": "Maxitems",
					"default": 0,
					"type": "integer"
				},
				"maxWeight": {
					"title": "Maxweight",
					"default": 25,
					"type": "number"
				},
				"noRepeatsInSets": {
					"title": "No repeats in sets",
					"description": "Entries cannot be picked more than once per set",
					"type": "boolean"
				},
				"qualityMult": {
					"title": "Quality range",
					"default": {
						"min": 1.0,
						"max": 1.0
					},
					"allOf": [
						{
							"$ref": "#/definitions/MinMaxRange"
						}
					]
				},
				"qtyMult": {
					"title": "Quantity range",
					"default": {
						"min": 1.0,
						"max": 1.0,
						"pow": 1.0
					},
					"allOf": [
						{
							"$ref": "#/definitions/MinMaxPowerRange"
						}
					]
				},
				"sets": {
					"title": "Sets",
					"description": "Loot sets",
					"type": "array",
					"items": {
						"$ref": "#/definitions/ItemSet"
					}
				}
			},
			"required": [
				"bp"
			],
			"additionalProperties": false
		}
	}
}